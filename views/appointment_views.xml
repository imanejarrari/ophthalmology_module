<odoo>
    <!-- List View for Appointments -->
    <record id="view_appointment_list" model="ir.ui.view">
        <field name="name">ophthalmology.appointment.list</field>
        <field name="model">ophthalmology.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="patient_id"/>
                <field name="date"/>
                <field name="purpose"/>
                <field name="doctor_name"/>
                <field name="workflow_status"/>
                <field name="date_status"/>
            </list>
        </field>
    </record>

    <!-- Form View for Appointments -->
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">ophthalmology.appointment.form</field>
        <field name="model">ophthalmology.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <!-- Workflow buttons -->
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                            groups="base.group_user"/>
                    <button name="action_mark_done" type="object" string="Mark Done" class="btn-success"
                            groups="base.group_user"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-danger"
                            groups="base.group_user"/>
                </header>

                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="date"/>
                        <field name="doctor_name"/>
                        <field name="purpose"/>
                        <field name="diagnosis"/>
                        <field name="treatment"/>
                    </group>
                    <group>
                        <field name="workflow_status"/>
                        <field name="date_status" readonly="1"/>
                    </group>

                    <!-- Smart Button -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(ophthalmology_action_examinations)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-search">
                            <field name="examination_count" widget="statinfo" string="Examinations"/>
                        </button>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Examinations -->
    <record id="ophthalmology_action_examinations" model="ir.actions.act_window">
        <field name="name">Examinations</field>
        <field name="res_model">ophthalmology.examination</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('appointment_id', '=', active_id)]</field>
    </record>

    <!-- Action for Appointments -->
    <record id="ophthalmology_action_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">ophthalmology.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_appointment_list"/>
    </record>
</odoo>
