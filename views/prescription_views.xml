<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_prescription_list" model="ir.ui.view">
        <field name="name">ophthalmology.prescription.list</field>
        <field name="model">ophthalmology.prescription</field>
        <field name="arch" type="xml">
            <list string="Prescriptions" editable="bottom">
                <field name="patient_id"/>
                <field name="appointment_id"/>
                <field name="name"/>
                <field name="date_prescribed"/>
                <field name="doctor_id"/>
                <field name="medications"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_prescription_form" model="ir.ui.view">
        <field name="name">ophthalmology.prescription.form</field>
        <field name="model">ophthalmology.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="appointment_id"/>
                         <field name="name"/>
                        <field name="date_prescribed"/>
                        <field name="doctor_id"/>
                        <field name="medications"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Prescriptions -->
    <record id="ophthalmology_action_prescriptions" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">ophthalmology.prescription</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_prescription_list"/>
    </record>
</odoo>
